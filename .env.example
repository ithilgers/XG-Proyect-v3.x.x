# ===========================================
# XG-Proyect Environment Configuration
# ===========================================

# Application
APP_NAME="XG Proyect"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=xgp
DB_USERNAME=root
DB_PASSWORD=root
DB_PREFIX=xgp_

# Redis (Cache & Queue)
REDIS_HOST=redis
REDIS_PASSWORD=xgproyect
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@xgproyect.local
MAIL_FROM_NAME="${APP_NAME}"

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Security
HASH_ALGO=bcrypt
HASH_ROUNDS=10

# Game Settings
GAME_NAME="XG Proyect"
GAME_SPEED=1
GAME_FLEET_SPEED=1
GAME_RESOURCE_MULTIPLIER=1
ENABLE_REGISTRATION=true
ENABLE_MAINTENANCE=false

# PHP Settings (for docker)
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M

# Xdebug (Development only)
XDEBUG_MODE=develop,debug,coverage
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003

# Docker
COMPOSE_PROJECT_NAME=xgproyect

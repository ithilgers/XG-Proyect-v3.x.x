{
    "name": "xgproyect/xgproyect",
    "description": "XGP Open-source OGame Clon",
    "keywords": [
        "ogame",
        "clon"
    ],
    "type": "project",
    "homepage": "https://xgproyect.org",
    "support": {
        "source": "https://github.com/XGProyect/XG-Proyect-v3.x.x",
        "issues": "https://github.com/XGProyect/XG-Proyect-v3.x.x/issues"
    },
    "authors": [
        {
            "name": "Lucas Kov√°cs",
            "homepage": "https://github.com/LucasKovacs",
            "role": "Lead"
        }
    ],
    "license": "GPL-3.0-only",
    "require": {
        "php": "^8.3",
        "phpmailer/phpmailer": "^6.9",
        "eftec/bladeone": "^4.13",
        "laravel/framework": "^11.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "predis/predis": "^2.2",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "ext-redis": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "bartlett/php-compatinfo": "^7.1",
        "phpstan/phpstan": "^1.11",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.15",
        "laravel/sail": "^1.29",
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "spatie/laravel-ignition": "^2.4"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "laravel/app/",
            "Database\\Factories\\": "laravel/database/factories/",
            "Database\\Seeders\\": "laravel/database/seeders/"
        },
        "classmap": [
            "app/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "laravel/tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcompatinfo": [
            "vendor/bin/phpcompatinfo --progress analyser:run ./app/"
        ],
        "phpunit": [
            "vendor/bin/phpunit --config tests/phpunit.xml --testsuite xgp_application"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "pint": [
            "vendor/bin/pint"
        ],
        "pint:test": [
            "vendor/bin/pint --test"
        ],
        "test": [
            "@phpunit",
            "@phpstan",
            "@pint:test"
        ]
    }
}
